<%# ------------ BACK LINK ------------ %>
<%= link_to '< Retour aux produits ', :back, class: 'back-btn' %>


<%# ------------ PRODUCT SHOP CONTAINER ------------ %>
<div class="product-show-container">



  <%# ------------ PRODUCT IMG ------------ %>
  <div class="box product-img-box">
    <img class="product-show-main-img" src="<%= @product.image_url %>" alt="">
    <div class="product-show-price-box">  <span> <%= @product.price %> </span>

    <%= image_tag 'duckcoin-white.png', class: 'duckcoin-product-show'%>


    </div>
  </div>

  <%# ------------ PRODUCT INFO ------------ %>
  <div class="box product-box">

    <div class="name-price-box">
      <h4 class="name"><%= @product.name %></h4>
    </div>

    <div class="unit-category-box">
      <h5 class="unit">350g</h5>
      <h5 class="category">
        <i class="fa-solid fa-tag"></i><%= @product.category.name %>
      </h5>
    </div>
  </div>

  <%# ------------ PRODUCT STOCK ------------ %>
    <div class="box product-stock-box">
      <% if @product.stock_quantity > 0 %>
        <h5 class="disponibility"><i class="fa-solid fa-circle-check in-stock"></i><%= @product.stock_quantity %> en stock</h5>
      <% else %>
        <h5 class="disponibility"><i class="fa-solid fa-circle-xmark" style="color: #ff0000;"></i><%= @product.stock_quantity %> pas en stock</h5>
      <% end %>
      <p class="shop"><i class="fa-solid fa-location-dot "></i><%= @product.shop.location %>

    </div>

  <%# ------------ BTN Accéder au DuckShop ------------ %>

  <div class="button-box neg-m-top">
  <%= link_to 'Accéder au DuckShop', shop_path(@shop), class: "shop-button" %>
  </div>


</div>
